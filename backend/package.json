    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "googleapis": "^71.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.22",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.5.0",
    "xoauth2": "^1.2.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
