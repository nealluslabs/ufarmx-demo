{
  "name": "bridgeway-marketplace",
  "version": "1.0.0",
  "description": "This is a marketplace for customers and clients",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "npm start --prefix frontend",
